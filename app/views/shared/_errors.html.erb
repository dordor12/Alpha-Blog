<% if obj.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <div class="panel-heading">
      <h2 class="panel-title">
        <%= pluralize(obj.errors.count, 'error') %>
      </h2>
      <div class="panel-body">
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>