<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
<div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: 'Enter category' %>
</div>
<div>
    <%= f.submit'Submiting', disable_with: 'Submiting...',class: "btn btn-primary", type: "submit" %>
</div>
    
<% end %>